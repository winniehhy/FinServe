@model Finserve3.ViewModels.CreateClaimViewModel
@{
    ViewData["Title"] = "Create New Claim";
}

@section Styles {
    <link rel="stylesheet" href="~/css/claim.css" />
}

<div class="container mt-4">
    <h2>Create New Claim</h2>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label asp-for="EmployeeId">EmployeeId</label>
            <input asp-for="EmployeeId" class="form-control" placeholder="0001" />
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="ClaimType">ClaimType</label>
            <select asp-for="ClaimType" class="form-control">
                <option value="Medical">Medical</option>
                <option value="Work Reimbursement">Work Reimbursement</option>
                <option value="Business Travel">Business Travel</option>
                <option value="Training">Training</option>
                <option value="Goods">Goods</option>
            </select>
            <span asp-validation-for="ClaimType" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="ClaimAmount">ClaimAmount</label>
            <input asp-for="ClaimAmount" class="form-control" placeholder="200" />
            <span asp-validation-for="ClaimAmount" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label>Upload Supporting Document</label>
            <input asp-for="Document" type="file" class="form-control" />
            <span asp-validation-for="Document" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit Claim</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}